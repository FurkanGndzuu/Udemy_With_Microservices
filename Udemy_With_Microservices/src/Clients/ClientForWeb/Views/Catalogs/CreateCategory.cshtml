@model CategoryViewModel
<div class="row">
    <div class="col-md-8 offset-md-2">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Kurs ekleme </h5>

                <form asp-controller="Catalogs" asp-action="CreateCategory" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly"></div>


                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>

                   



                    <button type="submit" class="btn btn-primary">Kurs Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>
